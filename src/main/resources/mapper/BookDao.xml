<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.ostp.web.dao.BookDao">
    <resultMap id="BaseResultMap" type="top.ostp.web.model.Book">
        <id column="isbn" jdbcType="VARCHAR" property="isbn"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="price" jdbcType="DECIMAL" property="price"/>
    </resultMap>
    <resultMap extends="BaseResultMap" id="ResultMapWithBLOBs" type="top.ostp.web.model.Book">
        <result column="cover" jdbcType="BLOB" property="cover"/>
    </resultMap>
    <select id="selectByISBN" parameterType="java.lang.String" resultMap="ResultMapWithBLOBs">
        select *
        from book
        where isbn = #{isbn,jdbcType=VARCHAR}
    </select>
    <delete id="deleteByISBN" parameterType="java.lang.String">
        delete
        from book
        where isbn = #{isbn,jdbcType=VARCHAR}
    </delete>
    <insert id="insert" parameterType="top.ostp.web.model.Book"
            useGeneratedKeys="true">
        insert into book (isbn, name, price, cover) values (#{isbn}, #{name,jdbcType=VARCHAR}, #{price,jdbcType=DECIMAL}, #{cover,jdbcType=BLOB})
    </insert>
    <update id="updateByISBN" parameterType="top.ostp.web.model.Book">
        update book
        set name  = #{name,jdbcType=VARCHAR},
            price = #{price,jdbcType=DECIMAL}
        where isbn = #{isbn,jdbcType=VARCHAR}
    </update>
</mapper>